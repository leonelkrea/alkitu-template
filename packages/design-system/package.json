{
  "name": "@alkitu/design-system",
  "version": "1.0.0",
  "description": "Alkitu Design System - Mobile-First React component library",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "dev": "next dev",
    "build": "tsc && next build",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.{ts,tsx}",
    "clean": "rm -rf .next dist out"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.1",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-collapsible": "^1.1.1",
    "@radix-ui/react-context-menu": "^2.2.15",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-navigation-menu": "^1.2.1",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-toggle": "^1.1.2",
    "@radix-ui/react-toggle-group": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.523.0",
    "next": "^15.3.4",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "^15.3.4",
    "postcss": "^8",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./components/*": {
      "types": "./src/components/*/index.ts",
      "import": "./src/components/*/index.ts"
    },
    "./themes": {
      "types": "./src/themes/tokens.ts",
      "import": "./src/themes/tokens.ts"
    },
    "./styles": "./styles/globals.css"
  },
  "files": [
    "src/**/*",
    "components/**/*",
    "styles/**/*",
    "README.md"
  ],
  "keywords": [
    "react",
    "components",
    "design-system",
    "typescript",
    "tailwind",
    "mobile-first",
    "atomic-design"
  ],
  "author": "Alkitu Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alkitu/alkitu-template.git",
    "directory": "packages/design-system"
  }
}